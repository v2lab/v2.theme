<?xml version="1.0"?>
<!-- This file holds the setup configuration of the viewlet managers
     for the "V2 Theme" skin.
 -->

<object>
  <order manager="plone.portalfooter" skinname="V2 Theme" based-on="Plone Classic Theme" purge="True" />

  <order manager="plone.portalheader" skinname="V2 Theme" based-on="Plone Classic Theme" purge="True" />

  <hidden manager="plone.abovecontentbody" skinname="V2 Theme" />

  <hidden manager="plone.portalheader" skinname="V2 Theme" purge="True">
	<viewlet name="v2.global_sections" />
	<viewlet name="plone.global_sections" remove="True" />
  </hidden>

  <hidden manager="plone.portaltop" skinname="V2 Theme" purge="True" />

  <hidden manager="plone.portalfooter" skinname="V2 Theme" purge="True">
	<viewlet name="v2.site_actions" />
	<viewlet name="v2.personal_bar" />
  </hidden>

</object>
