<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <action-provider name="portal_actions"/>
 <object name="object" meta_type="CMF Action Category">
  <property name="title"></property>
  <object name="buyable_content" meta_type="CMF Action">
   <property name="title">Buyable Content</property>
   <property name="description"></property>
   <property
      name="url_expr">string:${object_url}/@@v2_buyable_content</property>
   <property name="link_target"></property>
   <property name="icon_expr"></property>
   <property
      name="available_expr">python:context.portal_type in ('Document', 'Work',)</property>
   <property name="permissions">
    <element value="Modify portal content"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
</object>
